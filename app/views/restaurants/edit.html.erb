<h1>レストラン情報の変更</h1>
<%= form_for(@restaurant) do |f| %>
  <div class="form-group">
    <%= f.label :name, '店名' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tel, 'TEL' %>
    <%= f.text_field :tel, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url, 'ホームページ' %>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :image, '店の画像' %><br>
  <%= f.file_field :image, class: "js-shop-image-upload" %>
  <% if @restaurant.image.url %>
    現在の画像:<br >
    <%= image_tag @restaurant.image.url  %>
  <% end %>
  </div>
  <%= f.submit '変更する', class: "btn btn-default" %>
<% end %>
